# Environment variables for psf-slp-db
# Copy this file to .env and modify as needed for your environment

# Configure TCP port
PORT=5020

# IPFS Coordinator Name
COORD_NAME=ipfs-bch-wallet-service

# Email server settings (if nodemailer email notifications are used)
EMAILSERVER=mail.someserver.com
EMAILUSER=noreply@someserver.com
EMAILPASS=emailpassword

# BEGIN WALLET CONFIGURATION

# BCH Mnemonic for generating encryption keys and payment address
# Set this to your wallet mnemonic
#MNEMONIC=

# (Optional) use a wallet file generated by psf-bch-wallet.
# Default: wallet.json in project root
#WALLET_FILE=

# Wallet Configuration
# Default: web3 - connect to bch-api through web 3 JSON RPC over IPFS.
# Alternate: web2 - connect to bch-api through a web 2 REST API over HTTP.
WALLET_INTERFACE=web3

# Wallet API Server (only used if WALLET_INTERFACE=web2)
# Default web2 server: https://api.fullstack.cash/v5/
# Default web3 server: https://free-bch.fullstack.cash/
APISERVER=https://api.fullstack.cash/v5/

# Basic Authentication Password for connecting to bch-api through a web 2 REST API over HTTP
#WALLET_AUTH_PASS=

# END WALLET CONFIGURATION

# BEGIN IPFS CONFIGURATION

# Debug verbosity level of helia-coord.
# 0 = no debug logs. 3 = maximum logs.
DEBUG_LEVEL=2

# Enable/Disable Circuit Relay
# Set to true to enable circuit relay
ENABLE_CIRCUIT_RELAY=false

# SSL domain used for websocket connection via browsers
#CR_DOMAIN=

# If this node has an IP4 address or domain name used to provide a REST API
#WEB2_API=

# IPFS Ports
IPFS_TCP_PORT=4001
IPFS_WS_PORT=4003
IPFS_WEB_RTC_PORT=4005

# Connection preference for helia-coord
# Should have a value of 'cr' (default), or 'direct'
# Servers with an ip4 or ip6 address should use 'direct'
CONNECT_PREF=cr

# Settings for production, using external go-ipfs node
# Set to 'prod' for production environment
#SVC_ENV=
IPFS_HOST=localhost
IPFS_API_PORT=5001

# END IPFS CONFIGURATION

# Account Configuration
# Set to any value to disable new account creation
#DISABLE_NEW_ACCOUNTS=

# Admin password
#ADMIN_PASSWORD=

# Number of backup zip files to retain
BACKUP_QTY=3
